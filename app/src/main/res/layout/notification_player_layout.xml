<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.yoshida_makoto.kotlintest.ui.viewmodel.PlayerViewModel"/>

        <variable
            name="vm"
            type="PlayerViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_500"
        android:focusable="true"
        android:keepScreenOn="true">

        <RelativeLayout android:id="@+id/music_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_dip2">

            <TextView
                android:id="@+id/music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/small_dip2"
                android:maxLines="1"
                android:text="@{vm.musicTitle}"
                android:textColor="@color/white"
                tools:text="music_title_aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

            <TextView
                android:id="@+id/artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_title"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.artistName}"
                android:textColor="@color/white"
                tools:text="artist_name_aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

        </RelativeLayout>

        <TextView
            android:layout_below="@+id/music_label"
            android:id="@+id/current_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/key_controller"
            android:layout_marginLeft="@dimen/small_dip2"
            android:gravity="center"
            android:textColor="@color/white"
            bind:keyText="@{vm.currentMusicKey}"
            tools:text="key"/>

        <RelativeLayout
            android:id="@+id/seek_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/controller_layout"
            android:padding="@dimen/small_dip2">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@{vm.currentTimeString}"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="00:00"/>

            <TextView
                android:id="@+id/music_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@{vm.durationString}"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="00:00"/>

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/music_duration"
                android:layout_toRightOf="@id/current_time"
                android:max="@{vm.maxProgressValue}"
                android:onSeekBarChangeListener="@{vm.seekBarChangeListener}"
                android:onTouchListener="@{vm.seekBarTouchListener}"
                android:paddingLeft="@dimen/small_dip"
                android:paddingRight="@dimen/small_dip"
                android:progress="@{vm.currentProgressValue}"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/controller_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/small_dip2">

            <ImageView
                android:id="@+id/play_mode_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClickListener="@{vm.shuffleIconClickListner}"
                android:src="@drawable/ic_shuffle_off_36dp"
                bind:shuffle="@{vm.isShuffle}"/>

            <ImageView
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClickListener="@{vm.playPreviousButtonClickListener}"
                android:src="@drawable/ic_skip_previous_white_36dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClickListener="@{vm.playButtonClickListener}"
                android:src="@drawable/ic_play_arrow_white_36dp"
                android:textColor="@color/white"
                bind:isContentsPlaying="@{vm.contentsIsPlaying}"/>

            <ImageView
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClickListener="@{vm.playNextButtonClickListener}"
                android:src="@drawable/ic_skip_next_white_36dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/play_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/next_button"
                android:layout_weight="1"
                android:onClickListener="@{vm.playModeIconClickListener}"
                android:src="@drawable/ic_repeat_off_36dp"
                bind:playMode="@{vm.playMode}"/>

        </LinearLayout>

    </RelativeLayout>
</layout>