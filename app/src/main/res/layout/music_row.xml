<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>

    <data>

        <import type="com.example.yoshida_makoto.kotlintest.ui.viewmodel.MusicRowViewModel"/>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="MusicRowViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/vm.music_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:onClickListener="@{vm.clickListener}"
        android:orientation="vertical"
        android:padding="@dimen/small_dip2">

        <TextView
            android:id="@+id/music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{vm.music.title}"
            android:textColor="@color/gray_800"
            android:textSize="@dimen/big_text"
            tools:text="text"/>

        <TextView
            android:id="@+id/key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_title"
            android:textColor="@color/gray_700"
            bind:keyText="@{vm.music.key}"
            tools:text="key: default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/key"
            android:text="@{vm.music.artist}"
            android:textColor="@color/gray_700"
            tools:text="text"/>

    </RelativeLayout>
</layout>